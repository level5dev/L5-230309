{
  "components/carousel-content": "<div class=\"heroCarousel-content{{#and (if heading '==' false) (if text '==' false)}} heroCarousel-content--empty{{/and}}\">\r\n    <div class=\"heroCarousel-content-wrapper\">\r\n        {{#if heading}}\r\n            <p class=\"heroCarousel-title\">\r\n                {{#if (occurrences heading '|')}}\r\n                    <span class=\"heroCarousel-title-first h1\">\r\n                        {{~trim (first (split heading '|'))~}}\r\n                    </span>\r\n                    <br>\r\n                    <span class=\"heroCarousel-title-last h3\">\r\n                        {{~trim (last (split heading '|'))~}}\r\n                    </span>\r\n                {{else}}\r\n                    <span class=\"heroCarousel-title-full h1\">\r\n                        {{{heading}}}\r\n                    </span>\r\n                {{/if}}\r\n            </p>\r\n        {{/if}}\r\n        {{#if text}}\r\n            <p class=\"heroCarousel-description\">{{{text}}}</p>\r\n        {{/if}}\r\n        <div class=\"heroCarousel-content-button-wrapper\">\r\n        {{#if button_text}}\r\n            <a href=\"{{url}}\" aria-label=\"{{#if this.alt_text.length '!=' 0}}{{this.alt_text}}{{else}}{{lang 'carousel.slide_number' slide_number=(add @index 1)}}{{/if}}, {{{button_text}}}\" class=\"heroCarousel-action button button--primary button--large\">{{{button_text}}}</a>\r\n        {{/if}}\r\n        </div>\r\n    </div>\r\n</div>\r\n"
}